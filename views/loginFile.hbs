
<div class="container login-container">

  {{#if sucessRegistration}}
    <div class="alert alert-info" role="alert">
      Sign up success! Continue to Login
    </div>
  {{/if}}

  {{#if successLogOut}}
    <div class="alert alert-success text-center" role="alert">
    You have successfully logged out!
    </div>
  {{/if}}

  {{#if incorrectCombi}}
    <div class="alert alert-danger text-center" role="alert">
      Combination of username and password is incorrect!
    </div>
  {{/if}}

  {{#if trial}}
    <div class="alert alert-danger text-center" role="alert">
      try again!
    </div>
  {{/if}}

  <div class="row">
    <div class="col-md-3"></div> 
    <div class="col-md-6">
      <div class="card card-default card-body">
        <div class="title-app">
          <h1 class="title-top">Log In</h1>
        </div>
        <form action="/login" method="POST" id="login-form" class="sign-form">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" name="username" id="username" placeholder="Enter your username">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" aria-describedby="passwordHelpBlock" id="password" placeholder="Password">
          </div>
          <button type="submit" id="submit-login" class="btn btn-primary btn-log">Log In</button>
        </form>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

<div class="no-account">
  <p class="register-begin">Don't have an account? <a href="signup">Sign Up Here</a></p> 
</div>