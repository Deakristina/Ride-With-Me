<div class="container container-offer">
  {{#if errorMessage}}
    <div class="alert alert-danger text-center" role="alert">
      Field(s) cannot be empty!
    </div>
  {{/if}}
  <div class="row text-center d-flex justify-content-center">
    <div class="col-12 text-top img-top">
      <img src="img/car1.png"  alt="car icon" width="50">
      <h5 class="first-offer-title">Add your first trip!</h5>
    </div>
  </div>

<div class="container">
  <form action="/offer-trip" method="POST" autocomplete="on">
    <div class="form-row">
      <label for="from" class="col-sm-12 col-form-label">From: </label>
      <div class="col-6">
        <input type="text" class="form-control" id="from-city" name="from"  placeholder="City" required="true">
      </div>
      <div class="form-group col-6">
        <input type="text" class="form-control" id="from-address" name="from"  placeholder="Address" required="true">
      </div>
    </div>

    <div class="form-row">
      <label for="to" class="col-sm-12 col-form-label">To: </label>
      <div class="col-6">
        <input type="text" class="form-control" id="to-city" name="to"  placeholder="City" required="true">
      </div>
      <div class="form-group col-6">
        <input type="text" class="form-control" id="to-address" name="to"  placeholder="Address" required="true">
      </div>
    </div>
    
    <div class="form-row">
      <div class="col-6">
        <label for="seats" class="col-sm-6 col-form-label">Available seat(s)</label>
        <input type="number" class="form-control" id="seats" name="offered_seats" required="true" value="0" >
      </div>
      <div class="col-6">
        <label for="price" class="col-sm-6 col-form-label">Asking Price/seat</label>
        <input type="number" class="form-control euro" id="price" name="asking_price" required="true">
      </div>
    </div>

    <div class="form-row form-inline justify-content-center">
      <label for="datetime" class="col-sm-12 col-form-label text-center">Departure</label>
      <div class="form-group col-8 justify-content-center">
        <input type="datetime-local" class="form-control" id="datetime" name="departure" required="true">    
      </div>
    </div>

 
    <div class="form-group row">
      <div class="col-12 text-center mt-3">
        <button type="submit" class="btn btn-primary btn-lg" >Offer this Trip!</button>
      </div>
    </div>
  </form>
</div>
</div>