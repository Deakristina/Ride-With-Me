
<div class="container signup-container">
  {{#if errorMessage}}
    <div class="alert alert-danger" role="alert">
      Credentials combinations are invalid. Try different ones!
    </div>
  {{/if}}

  {{#if userNameExists}}
    <div class="alert alert-danger" role="alert">
      credentials already exist!
    </div>
  {{/if}}
  <div class="title-app">
    <h1 class="title-top">Sign Up</h1>
  </div>

  <div class="form-container">
    <form action="/signup" method="POST" id="sign-form" class="signup-form">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control form-control-sm" name="username" id="username" placeholder="Enter your username">
      </div>

      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control form-control-sm" name="email" id="email" placeholder="Enter email">
      </div>

    <div class="form-group">
      <label for="password1">Password</label>
      <input type="password" class="form-control form-control-sm" name="password1" aria-describedby="passwordHelpBlock" id="password1" placeholder="Password" onkeyup="validatePassword(this.value)">
      <ul class="requirement-group">
        <li class="requirement-item number"><i class="fas fa-check"></i> Password must at least has 1 number</li>
        <li class="requirement-item capital"><i class="fas fa-check"></i> Password must at least has 1 capital letter</li>
        <li class="requirement-item characters"><i class="fas fa-check"></i> Password must at least 4 characters long</li>
      </ul>
    </div>

    <div class="form-group">
      <label for="password2">Repeat Password</label>
      <input type="password" class="form-control form-control-sm" name="password2" id="password2" placeholder="Repeat Password" onkeyup="equalPassword(this.value)">
      <ul class="requirement-group">
        <li class="requirement-item equal"><i class="fas fa-check"></i>Password matches</li>
      </ul>
    </div>

    <button type="submit" id="register-btn" class="btn btn-primary btn-log inactive">Sign Up</button>
    </form>
  </div>
</div>