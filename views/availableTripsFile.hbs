<div class="container search-trip-container">
{{#if noTrip}}
<div class="alert alert-warning" role="alert">
  Unfortunately there is no trip on your specified query.
  Search another route/time.
</div>

{{/if}}

  <h3 class="find-title">Find your trip!</h3>

  <form action="/available-trips" method="POST">
    <div class="form-group row">
      <label for="from" class="col-sm-3 col-form-label">From: </label>
      <div class="col-sm-9">
        <input type="address-line1" class="form-control" id="from" name="from"  placeholder="Enter your starting point's address">
      </div>
    </div>
    <div class="form-group row">
      <label for="to" class="col-sm-3 col-form-label">To: </label>
      <div class="col-sm-9">
        <input type="street-address" class="form-control" id="to" name="to"  placeholder="Enter your destination's address">
      </div>
    </div>
    <div class="form-group row">
      <label for="datetime" class="col-sm-3 col-form-label">Departure</label>
      <div class="col-sm-9">
        <input type="date" class="form-control" id="date" name="departure">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-12 text-center mt-3">
        <button type="submit" class="btn btn-primary btn-search-style">Search</button>
      </div>
    </div>
  </form>
</div>

<div class="item-container">
  {{#each trips}}
  <div class="item-subcontainer">
    <p>From: {{this.from}}</p>
    <p>To: {{this.to}}</p>
    <p>Departure: {{this.departure}}</p>
    {{!-- <p>Available seat(s): <span id="avail_{{this.id}}"></span></p> --}}
    <p>Available seat(s): {{subtract this.offered_seats this.occupied_seats}}</p>
    <p>Asking Price: {{this.asking_price}}</p>
    <a class="btn btn-md btn-join" href="/join-trip?tripId={{this._id}}">Join Trip</a>
  </div>
  {{/each}}
</div>

